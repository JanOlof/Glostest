@model Glostest.User
@{
    ViewBag.Title = "Index";
}

<h2>Logga in</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            <div class="form-group">Användarnamn</div>
            <div class="form-group">@Html.TextBoxFor(m => m.Username) </div>
            <div class="form-group">Lösenord</div>
            <div class="form-group">@Html.PasswordFor(m => m.Password)</div>
            <input type="submit" value="Logga in" />
            <div class="form-group">
                @Html.ValidationSummary()
            </div>
        }
    </div>
</div>

